{
  "dashboard": {
    "title": "Mirai 2026 - Bot Performance Dashboard",
    "tags": ["mirai", "bot", "security-research"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Attack Success Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(mirai_bot_successful_attacks_total[5m])",
            "legendFormat": "Success Rate",
            "refId": "A"
          },
          {
            "expr": "rate(mirai_bot_failed_attacks_total[5m])",
            "legendFormat": "Failure Rate",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Attacks/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Detection Events",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(mirai_bot_detections_total[5m])",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Detections/sec"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [5], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "avg"},
              "type": "query"
            }
          ],
          "name": "High Detection Rate Alert"
        }
      },
      {
        "id": 3,
        "title": "Active Connections",
        "type": "stat",
        "gridPos": {"x": 0, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "mirai_scanner_active_connections",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        }
      },
      {
        "id": 4,
        "title": "Packets Sent/Received",
        "type": "graph",
        "gridPos": {"x": 6, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(mirai_bot_packets_sent_total[1m])",
            "legendFormat": "Sent",
            "refId": "A"
          },
          {
            "expr": "rate(mirai_bot_packets_received_total[1m])",
            "legendFormat": "Received",
            "refId": "B"
          }
        ]
      },
      {
        "id": 5,
        "title": "Evasion Mode Status",
        "type": "stat",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "mirai_bot_evasion_mode",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "Normal"},
              {"type": "value", "value": "1", "text": "Evading"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Attack Vector Distribution",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 12, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum by (vector) (increase(mirai_bot_attacks_by_vector_total[1h]))",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Bandwidth Utilization",
        "type": "gauge",
        "gridPos": {"x": 8, "y": 12, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "mirai_bot_bandwidth_utilization_percent",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 60},
                {"color": "red", "value": 80}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "AI Agent Performance",
        "type": "graph",
        "gridPos": {"x": 16, "y": 12, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "mirai_ai_agent_reward_total",
            "legendFormat": "Total Reward",
            "refId": "A"
          },
          {
            "expr": "rate(mirai_ai_agent_episodes_total[5m])",
            "legendFormat": "Episodes/sec",
            "refId": "B"
          }
        ]
      },
      {
        "id": 9,
        "title": "Scanner Statistics",
        "type": "table",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "mirai_scanner_syns_sent_total",
            "format": "table",
            "instant": true,
            "refId": "A"
          },
          {
            "expr": "mirai_scanner_successful_auth_total",
            "format": "table",
            "instant": true,
            "refId": "B"
          },
          {
            "expr": "mirai_scanner_failed_auth_total",
            "format": "table",
            "instant": true,
            "refId": "C"
          }
        ]
      },
      {
        "id": 10,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(mirai_bot_errors_total[5m])",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Errors/sec"},
          {"format": "short"}
        ]
      }
    ]
  }
}
