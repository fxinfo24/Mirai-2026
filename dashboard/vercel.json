{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["sfo1"],
  "env": {
    "NEXT_PUBLIC_AI_SERVICE_URL": "@ai_service_url",
    "NEXT_PUBLIC_CNC_API_URL": "@cnc_api_url",
    "NEXT_PUBLIC_WS_URL": "@ws_url",
    "NEXT_PUBLIC_ENABLE_3D_GLOBE": "true",
    "NEXT_PUBLIC_ENABLE_TERMINAL": "true",
    "NEXT_PUBLIC_ENABLE_AI_FEATURES": "true",
    "NEXTAUTH_SECRET": "@nextauth_secret",
    "NEXTAUTH_URL": "@nextauth_url"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/ai/:path*",
      "destination": "https://your-ai-service.com/:path*"
    },
    {
      "source": "/api/cnc/:path*",
      "destination": "https://your-cnc-service.com/:path*"
    }
  ]
}
