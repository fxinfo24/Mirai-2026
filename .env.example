# Mirai 2026 Environment Variables
# Copy this file to .env and configure for your environment

# Database Configuration
POSTGRES_DB=mirai
POSTGRES_USER=mirai
POSTGRES_PASSWORD=change_me_in_production_strong_password_here

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# AI Service Configuration
AI_SERVICE_HOST=0.0.0.0
AI_SERVICE_PORT=8000

# LLM API Keys (Optional - for AI features)
# See ai/llm_integration/.env.example for LLM configuration
OPENROUTER_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY=change_me_to_random_32_byte_hex_string

# Development/Production
FLASK_ENV=development
FLASK_DEBUG=False
